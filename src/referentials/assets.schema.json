{
    "definitions": {
        "options": {
            "$id": "#options",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": ["name", "description"],
                "additionalProperties": false
            }
        },
        "random-event": {
            "$id": "#random-event",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "upper": {
                        "type": "number"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": ["upper", "description"],
                "additionalProperties": false
            }
        },
        "move-result": {
            "$id": "#move-result",
            "type": "object",
            "properties": {
                "description": {"type": "string"},
                "options": {"$ref": "#options" }
            },
            "required": ["description"],
            "additionalProperties": false
        },
        "move": {
            "$id": "#move",
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "move-type": { "type": "string" },
                "description": { "type": "string" },
                "results": {
                    "type": "object",
                    "properties": {
                        "Strong Hit": {"$ref": "#move-result" },
                        "Weak Hit": {"$ref": "#move-result" },
                        "Miss": {"$ref": "#move-result" }
                    },
                    "required": ["Strong Hit", "Weak Hit", "Miss"],
                    "additionalProperties": false
                }
            },
            "required": ["name", "move-type", "description", "results"],
            "additionalProperties": false
        },
        "perk": {
            "$id": "#perk",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "result": {
                    "$ref": "#perk-result"
                }
            },
            "required": [
                "id",
                "enabled",
                "result"
            ],
            "additionalProperties": false
        },
        "perk-result": {
            "$id": "#perk-result",
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "options": {
                    "$ref": "#options"
                },
                "move": {
                    "$ref": "#move"
                }
            },
            "required": [
                "description"
            ],
            "additionalProperties": false
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "asset-type": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "perks": {
                "type": "array",
                "items": {
                    "$ref": "#perk"
                }
            },
            "res-counter": {
                "type": "object",
                "properties": {
                    "current": {
                        "type": "number"
                    },
                    "max": {
                        "type": "number"
                    }
                },
                "required": ["current", "max"],
                "additionalProperties": false
            },
            "custom-note": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "placeholder": {
                        "type": "string"
                    }
                },
                "required": ["title", "placeholder"],
                "additionalProperties": false
            }
        },
        "required": [
            "name",
            "asset-type",
            "perks"
        ],
        "additionalProperties": false
    }
}